<%= form_for @job do |f| %>
    <%= f.label :task, :requried => true %>
    <%= f.text_field :task %>
    <%= f.label :duration %>
    <%= f.text_field :duration %>
    <%= f.label :image %>
    <%= f.url_field :image %>
    <%= f.label :location, :requried => true %>
    <%= f.text_field :location %>
    <%= f.label :description %>
    <%= f.text_area :description , :class => "box"  %>
    <%= f.submit 'Submit Job Post',:class => "submit" %>
<% end %> 